generator client {
    provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
    id                String      @id @default(auto()) @map("_id") @db.ObjectId
    name              String?
    email             String      @unique
    image             String?
    bookedVisits      Json[]
    favResidensciesiD String[]    @db.ObjectId
    ownedResidenscies Residency[] @relation("owner")
}

model Residency {
    id          String   @id @default(auto()) @map("_id") @db.ObjectId
    title       String
    description String
    price       Int
    address     String
    city        String
    country     String
    image       String
    facilities  Json
    userEmail   String
    owner       User     @relation("owner", fields: [userEmail], references: [email])
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
}
